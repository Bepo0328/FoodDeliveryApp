<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.FoodDeliveryApp.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:title">@null</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.FoodDeliveryApp.Toolbar.WithArrow" parent="Widget.FoodDeliveryApp.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="Widget.FoodDeliveryApp.Toolbar.WithClose" parent="Widget.FoodDeliveryApp.Toolbar">
        <item name="navigationIcon">@drawable/ic_close</item>
    </style>

    <style name="Widget.FoodDeliveryApp.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/text_filter_chip_state_list</item>
        <item name="android:textStyle">bold</item>
        <item name="textStartPadding">8dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/brown</item>
        <item name="chipBackgroundColor">@color/background_filter_chip_state_list</item>
        <item name="chipIconTint">@color/icon_filter_chip_state_list</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>