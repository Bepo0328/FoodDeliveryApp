    android:id="@+id/navigation_main"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="kr.co.bepo.fooddeliveryapp.presentation.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/to_my_action"
            app:destination="@id/my_dest" />

    </fragment>

    <fragment
        android:id="@+id/my_dest"
        android:name="kr.co.bepo.fooddeliveryapp.presentation.my.MyFragment"
        android:label="@string/my"
        tools:layout="@layout/fragment_my" />
